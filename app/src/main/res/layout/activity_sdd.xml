    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondocielo"
    tools:context=".Sdd_Activity">

    <TextView
        android:id="@+id/clothTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="Shining Inheritance"
        android:paddingLeft="20dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/clothImage"
        android:layout_width="205dp"
        android:layout_height="220dp"
        android:layout_below="@id/clothTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-11dp"
        android:src="@drawable/sorpresas" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="61dp"
        android:layout_height="25dp"
        android:layout_below="@+id/clothTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:text=" • Título: "
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
